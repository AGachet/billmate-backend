{
  "name": "billmate-backend",
  "version": "0.2.1-alpha",
  "description": "BillMate: Wealth begins with good management. An open-source frontend for managing clients, invoices, and financial tasks.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agachet/billmate-backend"
  },
  "homepage": "https://github.com/agachet/billmate-backend#readme",
  "bugs": {
    "url": "https://github.com/agachet/billmate-backend/issues"
  },
  "scripts": {
    "build": "nest build",
    "build:ci": "HUSKY=0 CI=true nest build",
    "format": "prettier --write .",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "prod": "node dist/main",
    "lint": "eslint --config eslint.config.mjs .",
    "lint:fix": "eslint --config eslint.config.mjs . --fix",
    "type-check": "tsc -b",
    "test:unit": "NODE_NO_WARNINGS=1 jest --config jest.config.js --silent",
    "test:unit:verbose": "NODE_NO_WARNINGS=1 jest --config jest.config.js --verbose --detectOpenHandles --forceExit --logHeapUsage",
    "test:unit:watch": "NODE_NO_WARNINGS=1 jest --config jest.config.js --watch",
    "test:unit:coverage": "NODE_NO_WARNINGS=1 jest --config jest.config.js --coverage",
    "test:unit:debug": "NODE_NO_WARNINGS=1 node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config jest.config.js --runInBand",
    "test:e2e": "NODE_NO_WARNINGS=1 jest --config jest-e2e.config.js --runInBand --silent",
    "test:e2e:verbose": "NODE_NO_WARNINGS=1 E2E_VERBOSE=true jest --config jest-e2e.config.js --runInBand --verbose --detectOpenHandles --forceExit --logHeapUsage",
    "test:e2e:coverage": "NODE_NO_WARNINGS=1 jest --config jest-e2e.config.js --runInBand --coverage --coverageDirectory=coverage-e2e",
    "test:full": "npm run format && npm run lint && npm run type-check && npm run test:unit && npm run test:e2e",
    "test:full:verbose": "npm run format && npm run lint && npm run type-check && npm run test:unit:verbose && npm run test:e2e:verbose",
    "db:update:dev": "./scripts/update-db-dev.sh",
    "db:update:prod": "./scripts/update-db-prod.sh",
    "db:init:test": "./scripts/init-test-db.sh",
    "version:manage": "./scripts/tag-manager.sh \"$(git symbolic-ref --short HEAD)\"",
    "prepare": "if [ \"$HUSKY\" != \"0\" ]; then husky; fi",
    "postinstall": "if [ \"$HUSKY\" != \"0\" ] && [ -d './scripts' ]; then find ./scripts -type f -name '*.sh' -exec chmod +x {} +; fi"
  },
  "keywords": [
    "billmate",
    "open-source",
    "invoice-management",
    "client-management",
    "backend",
    "financial-tools",
    "nest"
  ],
  "dependencies": {
    "@nestjs/common": "11.0.11",
    "@nestjs/core": "11.0.11",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.0.11",
    "@nestjs/serve-static": "5.0.3",
    "@nestjs/swagger": "11.0.6",
    "@nestjs/terminus": "11.0.0",
    "@prisma/client": "6.4.1",
    "@types/cookie-parser": "1.4.8",
    "bcrypt": "5.1.1",
    "chalk": "5.4.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "cookie-parser": "1.4.7",
    "dotenv": "16.4.7",
    "mailersend": "2.5.0",
    "ms": "2.1.3",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "punycode": "2.3.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.18.0",
    "@nestjs/cli": "11.0.0",
    "@nestjs/schematics": "11.0.0",
    "@nestjs/testing": "11.0.11",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.10.7",
    "@types/bcrypt": "5.0.2",
    "@types/chalk": "0.4.31",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/ms": "2.1.0",
    "@types/node": "22.10.7",
    "@types/passport-jwt": "4.0.1",
    "@types/supertest": "6.0.2",
    "eslint": "9.19.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-jsonc": "2.19.1",
    "eslint-plugin-prettier": "5.2.3",
    "globals": "15.14.0",
    "husky": "8.0.0",
    "jest": "29.7.0",
    "prettier": "3.4.2",
    "prisma": "6.4.1",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.20.0"
  }
}
