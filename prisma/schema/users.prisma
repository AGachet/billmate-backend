/**
 * Enums
 */
enum Locale {
  EN
  FR

  @@map("locale")
}

enum TokenType {
  ACCOUNT_VALIDATION
  SESSION_REFRESH
  PASSWORD_RESET

  @@map("token_type")
}

/**
 * Table : User
 */
model User {
  id           String    @id @default(cuid())
  isActive     Boolean   @default(false)               @map("is_active")
  firstname    String?   @db.VarChar(30)
  lastname     String?   @db.VarChar(30)
  email        String    @unique @db.VarChar(100)
  password     String    @db.VarChar(255)
  lastLoginAt  DateTime?                               @map("last_login_at")
  createdAt    DateTime  @default(now())               @map("created_at")
  updatedAt    DateTime  @updatedAt                    @map("updated_at")

  tokens       UserToken[]
  rolesLinked  UserRoleLink[]
  preference   UserPreference?

  @@index([isActive])
  @@map("users")
}

/**
 * Table : User Token
 */
model UserToken {
  id          String    @id @default(cuid())
  userId      String    @map("user_id")
  token       String    @db.VarChar(500)
  type        TokenType
  expiresAt   DateTime? @map("expires_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("user_tokens")
}

/**
 * Table : Role
 */
model Role {
  id        Int      @id @default(autoincrement())
  name      String   @unique @db.VarChar(30)
  isActive  Boolean  @default(false)                  @map("is_active")
  createdAt DateTime @default(now())                  @map("created_at")
  updatedAt DateTime @updatedAt                       @map("updated_at")

  usersLinked       UserRoleLink[]
  modulesLinked     RoleModuleLink[]
  permissionsLinked RolePermissionLink[]

  @@map("roles")
}


/**
 * Table : User Preferences
 */
model UserPreference {
  id        Int     @id @default(autoincrement())
  userId    String  @unique                           @map("user_id")
  avatarUrl String? @db.VarChar(255)                  @map("avatar_url")
  updatedAt DateTime @updatedAt                       @map("updated_at")

  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  locale    Locale  @default(FR)

  @@map("user_preferences")
}

/**
 * Table : Relation User - Roles
 */
model UserRoleLink {
  userId    String                                    @map("user_id")
  roleId    Int                                       @map("role_id")
  createdAt DateTime @default(now())                  @map("created_at")
  updatedAt DateTime @updatedAt                       @map("updated_at")

  user      User     @relation(fields: [userId], references: [id])
  role      Role     @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
  @@index([userId])
  @@index([roleId])
  @@map("users_roles_links")
}
